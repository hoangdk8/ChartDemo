<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="27dp"
    android:gravity="bottom"
    android:padding="25px">

    <TextView
        android:id="@+id/text_view_truong"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="145"
        app:layout_constraintBottom_toTopOf="@id/view_bar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- View này sẽ nằm từ 105dp đến 145dp -->
    <View
        android:id="@+id/view_bar"
        android:layout_width="20dp"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:background="@drawable/rounded_background"
        app:layout_constraintBottom_toTopOf="@id/text_view_truong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_thu" />

    <TextView
        android:id="@+id/text_view_thu"
        android:layout_width="wrap_content"
        android:layout_height="50px"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="105"
        android:layout_marginBottom="125px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_bar" />
</androidx.constraintlayout.widget.ConstraintLayout>